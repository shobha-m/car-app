{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "../node_modules/@types/"
        ],
        "types": [
            "jasmine",
            "node",
            "core-js"
        ]
    },
    "compileOnSave": true,
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true,
        "transpileOnly": true
    },
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts"
    ]
}